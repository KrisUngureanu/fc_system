<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>ShepServices</display-name>
  <context-param>
    <param-name>dataSourceName</param-name>
    <param-value>gbdul_krs</param-value>
  </context-param>
  <context-param>
    <param-name>user</param-name>
    <param-value>sys</param-value>
  </context-param>
  <context-param>
    <param-name>password</param-name>
    <param-value>123</param-value>
  </context-param>
  <filter>
    <filter-name>forceUTF8CharSet</filter-name>
    <filter-class>kz.tamur.util.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>forceUTF8CharSet</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>SynchronousChannel</servlet-name>
    <servlet-class>kz.tamur.shep.scc.SynchronousChannel</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SynchronousChannel</servlet-name>
    <url-pattern>/scc</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AsynchronousChannel</servlet-name>
    <servlet-class>kz.tamur.shep.acc.AsynchronousChannel</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AsynchronousChannel</servlet-name>
    <url-pattern>/acc</url-pattern>
  </servlet-mapping>
</web-app>